rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /clothes/{clothes_id} {
      allow read;
      allow write, delete  : if request.auth != null && request.auth.uid == '4HGaStyLoMcIbdpfuXRU4vUiwbw2'
    
    }
    match /orders/{order_id} {
         allow read , write  : if request.auth != null;
         allow update,delete  : if request.auth != null && request.auth.uid == '4HGaStyLoMcIbdpfuXRU4vUiwbw2'
    }

    match /users/{user_id}{
      allow update : if request.auth.uid == user.id;
    allow delete : if  request.auth.uid == '4HGaStyLoMcIbdpfuXRU4vUiwbw2'
    }

    match /reviews
    /{review_id}{
      allow read;
      allow write : if request.auth != null;
      allow delete : if  request.auth.uid == '4HGaStyLoMcIbdpfuXRU4vUiwbw2'
    }
  }
}